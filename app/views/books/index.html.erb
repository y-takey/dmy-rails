<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <%= render partial: "book", locals: { book: book } %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
